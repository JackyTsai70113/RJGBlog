@model Web.Areas.Back.Models.Role.RoleAccountViewModel

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">帳號清單</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <button onclick="RoleAccountDelete('@user.UserName')" class="btn btn-danger">刪除</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
