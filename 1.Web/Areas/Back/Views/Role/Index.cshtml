@model Web.Areas.Back.Models.Role.RoleViewModel
@{
    ViewData["Title"] = "角色管理";
}

<div class="row form-group">
    <div class="col-10">

    </div>
    <div class="col-2">
        <a href="@Url.Action("Edit","Role",new { @area = "Back" })" class="btn btn-green fa-pull-right">
            <em class="fas fa-plus"></em>
            新增
        </a>
    </div>
</div>


<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">角色清單</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>角色名稱</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.Roles)
                    {
                        <tr>
                            <td>@role.Id</td>
                            <td>@role.Name</td>
                            <td>
                                <button class="btn btn-inverse">權限編輯</button>
                                <button class="btn btn-inverse">帳號編輯</button>
                                <button class="btn btn-danger">刪除</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
