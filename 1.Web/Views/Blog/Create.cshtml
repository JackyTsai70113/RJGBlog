@using Core.Models.DTO.Blogs;
@model CreateModel

<p class="text-center py-2">新增Blog</p>
<div class="row">
    <div class="col-xl-4 col-md-2"></div>
    <div class="col-xl-4 col-md-8 col-xs-12">
        <div class="wrapper">
            <div class="block-center mt-4 wd-xl">
                <!-- START card-->
                <div class="card card-flat">
                    <div class="card-body">
                        <form method="post" class="mb-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <div class="input-group with-focus">
                                    @Html.TextBoxFor(m => m.CoverImageUrl, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.CoverImageUrl) })
                                </div>
                                <span asp-validation-for="CoverImageUrl" class="form-text text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="input-group with-focus">
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Title) })
                                </div>
                                <span asp-validation-for="Title" class="form-text text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="input-group with-focus">
                                    @Html.TextBoxFor(m => m.Content, new { @class = "form-control", placeholder = @Html.DisplayNameFor(m => m.Content) })
                                </div>
                                <span asp-validation-for="Content" class="form-text text-danger"></span>
                            </div>

                            <button class="btn btn-block btn-primary mt-3" type="submit">儲存文章</button>
                        </form>
                    </div>
                </div>
                <!-- END card-->
            </div>
        </div>
    </div>
    <div class="col-xl-4 col-md-2"></div>
</div>