    var words = [];

    $.ajax({
        type: 'get',
        url: '@Url.Action("GetTagClouds", null)',
        success: function (result) {
            result.data.forEach(function (tagCloud) {
                words.push({ text: tagCloud.name, weight: tagCloud.weight })
            })
            $('#jqcloud').jQCloud(words, {
                width: 240,
                height: 200,
                steps: result.data.length
            });
        }
    })

    $('#btnSearch').click(function () {
